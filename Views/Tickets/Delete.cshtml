@model VipeSystem.Models.Ticket

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-danger">Eliminar Ticket</h2>
    <hr />

    <p>¿Estás seguro de que deseas eliminar este ticket?</p>

    <div class="mb-3">
        <strong>Título:</strong> @Html.DisplayFor(model => model.Title)
    </div>
    <div class="mb-3">
        <strong>Descripción:</strong> @Html.DisplayFor(model => model.Description)
    </div>
    <div class="mb-3">
        <strong>Estado:</strong> @Html.DisplayFor(model => model.Status)
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="text-center">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary ms-2" })
        </div>
    }
</div>