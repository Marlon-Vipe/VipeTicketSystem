@model VipeSystem.Models.Category
@{
    ViewBag.Title = "Crear Categoría";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Crear Nueva Categoría</h4>
                </div>

                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row g-1">
                            <!-- Columna Izquierda -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Nombre</label>
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese el nombre de la categoría" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Descripción</label>
                                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 3, placeholder = "Describa la categoría" })
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                </div>
                            </div>

                                <div class="mb-3">
                                    <label class="form-label">Fecha de Creación</label>
                                    @Html.EditorFor(model => model.CreatedAt, new { htmlAttributes = new { @class = "form-control", @type = "datetime-local", @value = DateTime.Now.ToString("yyyy-MM-ddTHH:mm") } })
                                    @Html.ValidationMessageFor(model => model.CreatedAt, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        <div class="d-flex justify-content-between mt-3">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">Volver a la lista</a>
                            <button type="submit" class="btn btn-primary">Crear Categoría</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}